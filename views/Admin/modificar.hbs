<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la Novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
            <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="mb-3 row">
                    <input type="text" class="form-control" value="{{novedad.nombre}}" placeholder="Nombre" name="nombre">
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" value="{{novedad.apellido}}" placeholder="Apellido" name="apellido">
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" value="{{novedad.edad}}" placeholder="Edad" name="edad">
                </div>
                <div class="mb-3 row">
                    <input type="text" class="form-control" value="{{novedad.puesto}}" placeholder="Puesto" name="puesto">
                </div>
                <div class="mb-3 row">
                    <p>
                        <label>Imagen: 
                        <input type="file" name="imagen" id="imagen"/></label>
                    </p>
                     <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">Eliminar imagen actual?</label>
                     <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                     </p>
                </div>

                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
            {{#if error}}
        <p>{{message}}</p>
        {{/if}}
        </div>
    </div>
</div>